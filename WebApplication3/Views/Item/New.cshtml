@model MidtermExam2.Models.Item

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	
	<meta name="viewport" content="width=device-width" />
	<title>Midterm</title>
</head>
<body>
	<form asp-action="Item" method="post">
		<p>
			<label asp-for="ItemID">ItemID:</label>
			<input asp-for="ItemID" />
		</p>
		<p>
			<label asp-for="Description">Description:</label>
			<input asp-for="Description" />
		</p>
		<p>
			<label asp-for="UnitsOnHand">Units On Hand:</label>
			<input asp-for="UnitsOnHand" />
		</p>
		<p>
			<label asp-for="Cost">Cost:</label>
			<input asp-for="Cost" />
		</p>
		<p>
